<% provide(:title, 'Houses') %>
<h1>Houses</h1>
<div class = "center hero-unit">
<div><%= form_tag houses_path, method: :get do %>
	<div class = "form-group"><%= text_field_tag :search, params[:search], placeholder: "Enter search string" %></div>
	<%= button_tag(type: "submit", :class => "btn  btn-large btn-primary") do %>
	  Search houses  <i class="icon-search"></i>
	<% end %> 
	<% end %>
</div>
</div>

<div class = "center" >
<%= will_paginate %>
</div>
<ul class="users">
  <%= render @houses %>
</ul>
      <% if @houses.blank? %>
        <h4>Sorry.. There are no matches for <%= params[:search] %>.</h4>
      <% end %>
<div class = "center" >
<%= will_paginate %>
</div>



